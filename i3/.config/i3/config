# exit i3 (logs # exit i3 (logs you out of your X session) but ask a confirmation before
bindsym $mod+Shift+j exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym e resize shrink width 10 px or 10 ppt
        bindsym a resize grow height 10 px or 10 ppt
        bindsym h resize shrink height 10 px or 10 ppt
        bindsym y resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+shift+colon mode "resize"

# Vim-like/emacs-like marks
## This is awesome, see : http://www.slackword.net/?p=657
mode "focused" {

                # hardcoded focus keybindings
                bindsym i [class="(?i)firefox"] focus
                #bindsym e [class="(?i)thunderbird"] focus
                bindsym e [title="(?i)mutt"] focus
                bindsym u [class="(?i)zathura"] focus

                # keybindings for marking and jumping to clients
                bindsym a exec i3-input -F 'mark %s' -P 'Mark name: '
                bindsym comma exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '

                # Assign marks to keys 1-5
                bindsym Shift+multiply mark mark1
                bindsym Shift+w mark mark2
                bindsym Shift+quotedbl mark mark3
                bindsym Shift+apostrophe mark mark4
                bindsym Shift+grave mark mark5

                # Jump to clients marked 1-5
                bindsym multiply [con_mark="mark1"] focus
                bindsym w [con_mark="mark2"] focus
                bindsym quotedbl [con_mark="mark3"] focus
                bindsym apostrophe [con_mark="mark4"] focus
                bindsym grave [con_mark="mark5"] focus

                # Exit to the default mode
                bindsym Return mode "default"
                bindsym Escape mode "default"
}

#bindsym $mod+s mode "focused"



